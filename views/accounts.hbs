<style>
    li.collection-item:hover {
        background-color: rgba(238, 110, 115, 0.10); !important;
        -webkit-transition: background-color 0.5s;
    }

    li.collection-item {
        -webkit-transition: background-color 0.5s;
    }

    li .material-icons {
        color: rgba(238, 110, 115, 1);
    }
</style>
<div class="row">
    <div class="col s6 offset-s3">
        <ul class="collection">
            {{#each users}}
                <li class="collection-item avatar">
                    <img src="images/user.png" alt="" class="circle">
                    <span class="title">{{username}}</span>
                    <p>{{birthdate}} <br>{{city}}</p>
                    <a href="/accounts/{{id}}" class="secondary-content"><i class="material-icons">send</i></a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>